{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",      // Includes all subdirectories in your workspace
                "/usr/include/pcl-1.12",      // PCL include path
                "/usr/include/eigen3",        // Eigen include path
                "/usr/include/vtk-9.1",       // If VTK is used with PCL
                "/usr/local/include",         // Local include directory
                "/usr/include/flann",         // FLANN include path
                "/usr/include/CGAL",          // CGAL include path
                "/usr/include/boost"          // Boost, required by CGAL and other libraries
            ],
            "defines": [],
            "compilerPath": "/usr/bin/gcc",  // Path to the GCC compiler
            "cStandard": "c17",              // C standard, adjust if using a different version
            "cppStandard": "gnu++17",        // Using C++17 with GNU extensions
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4,
    "ros.distro": "humble"
}
